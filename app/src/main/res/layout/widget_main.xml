<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_widget"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    android:gravity="fill_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <TextView
            android:fontFamily="@font/segoeui"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:id="@+id/widgetMessage_textView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/hint_widget_image"
            android:text="@string/widget_default_text"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="bottom|center">

        <ImageView
            android:id="@+id/widgetImage_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/friend_evening_5"
            android:paddingBottom="2dp"
            android:contentDescription="@string/hint_widget_image"/>
    </RelativeLayout>

</LinearLayout>